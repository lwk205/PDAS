10 'PROGRAM TO PLOT RESULTS FROM COMPRESSIBLE EPPLER CODE.
20 'NOTE: IN ORDER TO USE THE VGA DISPLAY, THIS PROGRAM MUST BE COMPILED
30 'WITH A COMPILER WHICH SUPPORTS THE VGA MODES.
40 'AUGUST 23, 1990   J.G. RONCZ
50 KEY OFF
60 EGA% = 9: VGA% = 12: GREEN% = 2
70 INPUT "ENTER FILE NAME TO BE PLOTTED: ", FILE$
80 OPEN FILE$ FOR INPUT AS 1
90 RESOLUTION% = VGA%
100 SCREEN RESOLUTION%
110 IF EOF(1) THEN SCREEN 0: END
120 LINE INPUT #1, PLOTTYPE$
130 IF RESOLUTION% = VGA% THEN YOFF = 480 ELSE YOFF = 350
140 IF RESOLUTION% = VGA% THEN 190
150 IF INSTR(PLOTTYPE$, "DIAG") <> 0 THEN XSCALE = 41.317: YSCALE = 31.8731: XOFF = 3
160 IF INSTR(PLOTTYPE$, "BLAY") <> 0 THEN XSCALE = 38.317: YSCALE = 29.5588: XOFF = 0
170 IF INSTR(PLOTTYPE$, "CDCL") <> 0 THEN XSCALE = 43.5041: YSCALE = 33.5603: XOFF = -.95
180 GOTO 220
190 IF INSTR(PLOTTYPE$, "DIAG") <> 0 THEN XSCALE = 41.317: YSCALE = 41.317: XOFF = 3
200 IF INSTR(PLOTTYPE$, "BLAY") <> 0 THEN XSCALE = 38.317: YSCALE = 38.317: XOFF = 0
210 IF INSTR(PLOTTYPE$, "CDCL") <> 0 THEN XSCALE = 43.5041: YSCALE = 43.5041: XOFF = -.95
220 WHILE NOT EOF(1)
230 INPUT #1, X, Y, I
240 IF I = 999 THEN 290
250 PX = (X + XOFF) * XSCALE: PY = YOFF - Y * YSCALE
260 IF I = 2 THEN LINE (LASTX, LASTY)-(PX, PY), GREEN%
270 LASTX = PX: LASTY = PY
280 WEND: SCREEN 0: END
290 A$ = INPUT$(1): CLS
300 GOTO 110

